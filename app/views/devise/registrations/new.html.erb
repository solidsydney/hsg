  <div class="container">
    <h2 class = "signin-heading" > Register Now with just 4 easy steps </h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }, :class => "form-signin") do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, :class => "form-control"  %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control"  %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "form-control"  %></div>

      <div><%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div> <!-- /container -->